/* pages/note/note.wxss */
.title{
  margin: 1vh 0;
}
.note-content{
  width: 100%;
}
.note-content>view{
  display: inline-block;
  width: 94vw;
  height: 4rem;
  margin-top: 5rpx;
  padding: 10rpx 3vw 0;
  font-size:1.5rem;
  border: 3rpx solid #eee;
}
.note-content .shotText{
  width: 100%;
  font-size:1rem;
  color:#888;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
}

.bottom-btn{
  position: fixed;
  bottom: 2rem;
  width: 4rem;
  height: 4rem;
  line-height: 4rem;
  background-color: brown;
  border-radius: 2rem;
  font-size: 3rem;
  font-weight: 100;
  color: white;
  text-align: center;
}